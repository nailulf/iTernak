<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.example.nailul.iternak.Activity.TernakDetail"
		android:orientation="vertical"
		android:baselineAligned="false">

	<HorizontalScrollView
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_gravity="right">

		<LinearLayout
				android:layout_width="wrap_content"
		        android:layout_height="match_parent"
				android:orientation="horizontal">

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/imageView2"
					android:background="@drawable/sapi_example"
					android:layout_gravity="center_vertical"
					android:layout_marginRight="16dp"
					android:foregroundGravity="center_vertical|center_horizontal"/>

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/imageView21"
					android:background="@drawable/sapi_example"
					android:layout_gravity="center_vertical"
					android:foregroundGravity="center_vertical|center_horizontal"/>

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/imageView23"
					android:background="@drawable/sapi_example"
					android:layout_gravity="center_vertical"
					android:foregroundGravity="center_vertical|center_horizontal"/>

		</LinearLayout>
	</HorizontalScrollView>

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="32dp"
				android:paddingLeft="32dp"
				android:paddingRight="32dp">

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="ID Sapi"
					android:textColor="@color/grayBG"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="Usia"
					android:textColor="@color/grayBG"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="Berat Badan"
					android:textColor="@color/grayBG"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="Tinggi Badan"
					android:textColor="@color/grayBG"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="Lingkat Badan"
					android:textColor="@color/grayBG"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="Warna kulit"
					android:textColor="@color/grayBG"/>
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="24sp"
					android:text="Riwayat Penyakit"
					android:textColor="@color/grayBG"/>

		</LinearLayout>

	</ScrollView>
</LinearLayout>
